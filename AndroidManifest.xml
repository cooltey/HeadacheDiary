<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cooltey.headachediary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	
    <application 
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cooltey.headachediary.MainActivity"
            android:label="@string/app_name" 
            android:configChanges="orientation"
			android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cooltey.headachediary.SheetActivity"
            android:label="@string/sheet_patient_app_title"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation"
			android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.cooltey.headachediary.SetupActivity"
            android:label="@string/setup_patient_app_title"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation"
			android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
